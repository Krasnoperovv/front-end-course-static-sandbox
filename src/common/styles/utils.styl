.absolute-center {
  position absolute
  top 50%
  left 50%
  transform: translate(-50%, -50%)
}

.animation-rotation {
  animation-name rotation
  animation-duration: 9000ms
  animation-iteration-count: infinite
  animation-timing-function linear
}

@keyframes rotation {
    0% {
      transform: translate(-50%, -50%) rotate(0deg)
    }
    100% {
      transform: translate(-50%, -50%) rotate(-360deg)
    }
}
body {
  font-family: "Didact Gothic", sans-serif;
}

.row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.text-title {
  font-family: "Gloria Hallelujah";
}

.text-centre {
  text-align: center;
}

.text-white {
  color: primaryColor;
}

.section {
  height: 100vh;
  padding: 16px;
}

.bg-tertiary {
  background-color: tertiaryColor;
  padding-top: 50px;
}

.bg-shipunov {
  background-color: secondaryColor;
  padding-top: 50px;
}

.bg-secondary {
  background-color: alternativeColor;
}

#home {
  padding-top: 50px;
}
.container {
  margin: auto;
  max-width: 800px;
  height: 50%;
}

.container-venom {
  margin: auto;
  max-width: 1200px;
  height: 50%;
}

.card {
  padding: 2rem;
  background: primaryColor;
}

.card-narrow {
  width: 200px;
  background: primaryBackgroundColor;
  text-align: center;
  padding: 32px;
}

.card-shipunov {
  width: 200px;
  background: primaryColor;
  text-align: left;
  padding: 32px;
}

.card-venom {
  width: 500px;
}

.standard-border {
  border: 1px solid secondaryColor;
}

.fancy-input {
  background: rgba(0, 0, 0, 0.04);
  border: 1px solid rgba(0, 0, 0, 0);
  outline: none;
  height: 34px;
  width: 100%;
  padding: 8px;
  box-sizing: border-box;
}

.fancy-input:focus {
  background: rgba(0, 0, 0, 0);
  border: 1px solid secondaryColor;
}

.shadow {
  box-shadow: 2px 2px 4px 0 rgba(0, 0, 0, 0.6);
}

.btn-primary,
.btn-secondary {
  cursor: pointer
  border: none
  width: 100px
  height: 36px
  line-height: 36px
  transition: all ease-in-out 300ms
  &:hover {
    box-shadow: 2px 2px 14px 0 rgba(0, 0, 0, 0.3);
    }
}

.radius {
  border-radius: 8px;
}

.btn-primary {
  color: primaryColor;
  background: secondaryColor;
}

.btn-secondary {
  background: primaryColor;
  color: secondaryColor;
}

.d-block {
  display: block;
}

.m-t {
  margin-top: 1rem;
}

.m-r {
  margin-right: 1rem;
}

.m-l {
  margin-left: 1rem;
}

.m-l-s {
  margin-left: 0.5rem;
}

.p-t {
  padding-top: 1rem;
}

.navigation {
  height: 50px;
  background: secondaryBackgroundColor;
  color: primaryColor;
  width: 100%;
  position: fixed;
  top: 0;
  padding: 0 10px;
  box-shadow: 2px 2px 4px 0 rgba(0, 0, 0, 0.3);
}

.navigation-item {
  padding: 15px;
  color: primaryColor;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  object-fit: cover;
}

.info {
  border-bottom: 1px solid secondaryColor;
  padding: 8px 0;
  color: tertiaryBackgroundColor;
}

.text-accent {
  color: accentColorText;
}

.text-black {
  color: initial;
}
